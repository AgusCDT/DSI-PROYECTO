<Page
    x:Class="Meditics.Lobby"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Meditics"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="CustomTextBlockStyle">
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontStyle" Value="Normal"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Image Source="/Assets/pantallacarga2.jpeg" Stretch="Fill"/>

        <Button x:ConnectionId='2'                             Width="100" Height="100" VerticalAlignment="Top" CornerRadius="100">
            <Image Source="/assets/playerIcon.png" Margin="-25,-24,-25,-26"/>
        </Button>

        <Button x:ConnectionId='3'                              Margin="0,25,17,0" VerticalAlignment="Top" Width="50" Height="50" Background="White" HorizontalAlignment="Right">
            <Image Source="/assets/settings.png" Stretch="Fill"/>
        </Button>

        <Button x:ConnectionId='4'                                Margin="0,0,17,40" VerticalAlignment="Bottom" Width="100" Height="50" Background="White" HorizontalAlignment="Right">
            <Image Source="/assets/play.png" Stretch="Fill"/>
        </Button>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,25,0,0" >
            <Button Content="LOBBY" Background="Cyan" Width="100"/>
            <Button Content="TIENDA" Background="DarkCyan" Width="100"/>
            <Button Content="INVENTARIO" Background="DarkCyan" Width="100"/>
        </StackPanel>

    </Grid>
</Page>

